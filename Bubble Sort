 Bubble Sort

public class Solution {
    public static void bubbleSort(int[] a, int n) {
        //Your code goes here
        // int chk=0;
        for(int i=n-1;i>=1;i--){
            
            for(int j=0;j<=i-1;j++){
                if(a[j]>a[j+1]){
                    int temp=a[j+1];
                    a[j+1]=a[j];
                    a[j]=temp;
                    // chk=1;
                }

                
            }
        }
        // if(chk==0)
        // break;
    }

}
